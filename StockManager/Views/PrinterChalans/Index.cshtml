@model IEnumerable<StockManager.Models.PrinterChalan>

@{
    ViewBag.Title = "Printer Chalan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Printer Chalan</h2>
<table class="table-responsive">
    <tr>
        <td class="col-md-6 col-xs-12">
            @Html.ActionLink("Create new printer chalan(Product send to printer)", "Create", new { id = 1 }, new { @class = "btn btn-success" })
        </td>
        <td class="col-md-6 col-xs-12">
            @Html.ActionLink("Create new printer chalan(Product received from printer)", "Create", new { id = 0 }, new { @class = "btn btn-success " })
        </td>
</table>
<table class="table table-striped table-advance table-hover mt">
    <tr>
        <th>
            Chalan Number
        </th>
        <th>
            Vendor Name
        </th>
        <th>
            Chalan Date
        </th>
        <th>
            Procuct Given To Printing
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(Convert.ToString(item.Id), "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor.VendorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChalanDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsGivenToPrinting)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure you wish to delete this printer chalan?');", @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
