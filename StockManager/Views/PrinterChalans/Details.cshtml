@model StockManager.Models.PrinterChalan

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Printer Chalan# @Model.Id</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Vendor Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vendor.VendorName)
        </dd>
        <dt>
            Chalan Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ChalanDate)
        </dd>
       
            <dt>
                Document Number
            </dt>
            <dd>
                @Html.DisplayFor(model => model.dispatch_document_number)
            </dd>
            <dt>
                Dispatch Through
            </dt>
            <dd>
                @Html.DisplayFor(model => model.dispatched_through)
            </dd>
            <dt>
                Bale Numbers
            </dt>
            <dd>
                @Html.DisplayFor(model => model.bale_numbers)
            </dd>
            <dt>
                Description
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        
    </dl>
</div>
<p>
    Printer Chalan Details
</p>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Quantity
        </th>
        <th>
            Fold
        </th>
        <th>
            Expected Fold
        </th>
        <th>
            NetQuantity
        </th>
        <th>
            Shrinkage
        </th>
    </tr>
    @{
        if (Model != null && Model.PrinterChalanDetails != null)
        {
            foreach (var item in Model.PrinterChalanDetails)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fold)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpectedFold)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NetQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shrinkage)
                    </td>
                </tr>
            }
        }
    }
</table>
<p>
    @Html.ActionLink("Close", "Index", "PrinterChalans", new { @class = "btn btn-danger" })
</p>