@model StockManager.Models.PurchaseOrder

@{
    ViewBag.Title = "Purchase Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption font-red-sunglo">
            <i class="icon-speech font-red-sunglo"></i>
            <span class="caption-subject bold uppercase">Invoices</span>
        </div>
        <div class="actions">
            <a href="@Url.Action("Index")" class="btn btn-circle btn-default">
                <i class="fa fa-arrow-left"></i> Back
            </a>
            <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title="">
            </a>
        </div>
    </div>
    <div class="portlet-body">

        <dl class="dl-horizontal">
            <dt>
                Vendor Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Vendor.VendorName)
            </dd>
            <dt>
                Invoice Number
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InvoiceNumber)
            </dd>

            <dt>
                Invoice Date
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InvoiceDate)
            </dd>

            <dt>
                Dispatch Document Number
            </dt>

            <dd>
                @Html.DisplayFor(model => model.dispatch_document_number)
            </dd>

            <dt>
                Dispatch Through
            </dt>

            <dd>
                @Html.DisplayFor(model => model.dispatched_through)
            </dd>

            <dt>
                Destination
            </dt>

            <dd>
                @Html.DisplayFor(model => model.destination)
            </dd>

            <dt>
                Bale Nos
            </dt>

            <dd>
                @Html.DisplayFor(model => model.bale_numbers)
            </dd>

            <dt>
                Description
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>


        </dl>
    </div>
    <p>
        Purchase Details
    </p>
    <table class="table">
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Rate
            </th>
            <th>
                Fold
            </th>
        </tr>
        @{
            if (Model != null && Model.PurchaseDetails != null)
            {
                foreach (var item in Model.PurchaseDetails)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fold)
                        </td>
                    </tr>
                }
            }
        }
    </table>

</div>
