@model IEnumerable<StockManager.Models.PurchaseDetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Purchase Order Details Bill # : @ViewData["PurchaseId"]</h2>
@Html.ActionLink("Add New Purchase Order Detail", "Create", new { PurchaseId = ViewData["PurchaseId"] }, new { @class = "btn btn-success btn-sm pull-left" })
@*<a id="btnCreate" class="btn btn-success btn-sm pull-left" data-toggle="modal" href="/PurchaseDetails/Create">Add New Purchase Order Detail</a>*@
<br />
<table class="table table-striped table-advance table-hover mt">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new {@class = "btn btn-success btn-xs" }) |                
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Back to Purchase Order", "Index", "PurchaseOrders")
</div>