@*@model IEnumerable<StockManager.Models.Vendor>*@
@model PagedList.IPagedList<StockManager.Models.Vendor>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vendors</h2>

<p>
    @Html.ActionLink("Add New Vendor", "Create", null, new { @class = "btn btn-success" })
</p>
@*<p>
        Find by Vendor Name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>*@

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Mobile
        </th>
        <th>
            Email
        </th>
        <th>
            Pan Number
        </th>
        <th>
            GST Number
        </th>

        <th>
            Description
        </th>
        <th>
            Vendor Type
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(Convert.ToString(item.VendorName), "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pan_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gst_number)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendorType.VendorType1)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure you wish to delete this Vendor?');", @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }
</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))