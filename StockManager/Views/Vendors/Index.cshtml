@model IEnumerable<StockManager.Models.Vendor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vendors</h2>

<p>
    @Html.ActionLink("Add New Vendor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Mobile
        </th>
        <th>
            Email
        </th>
        <th>
            Pan Number
        </th>
        <th>
            GST Number
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>      
        <th>
            Vendor Type
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(Convert.ToString(item.VendorName), "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pan_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gst_number)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.VendorType.VendorType1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
