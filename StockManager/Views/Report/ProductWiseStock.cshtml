@model  List<StockManager.Models.USP_ProductWiseStock_Result>

@{
    ViewBag.Title = "Product Wise Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table">
    <tr class="row">
        <td class="col-md-10">
            <h2>Product Wise Stock Report</h2>
        </td>
        <td class="col-md-2" style="vertical-align:middle">
            <a href="~/Report/PrintProduct">
                <i class="fa fa-print siz" style="font-size:30px;" aria-hidden="true"></i>
            </a>
        </td>
    </tr>
</table>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Opening Stock
        </th>
        <th>
            Total Purchase
        </th>
        <th>
            Send to Printer
        </th>
        <th>
            Received from Printer
        </th>
        <th>
            Shrinkage
        </th>
        <th>
            Total Sales
        </th>
        <th>
            Stock In Hand
        </th>
    </tr>
    @{
        if (Model != null && Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpeningStock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPurchase)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalProductGivenForPrinting)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalReceived)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shrinkage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalSales)
                    </td>
                    <td>
                        @Html.Raw((item.OpeningStock + item.TotalPurchase+ item.TotalReceived)-(item.TotalSales+ item.TotalProductGivenForPrinting))
                       
                    </td>
                </tr>
            }
        }
    }
</table>



